<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/titlebar"
        >
    <ImageView android:layout_width="40dp"
               android:layout_height="match_parent"
               android:layout_marginTop="6dp"
               android:layout_marginLeft="-4dp"
               android:src="@drawable/action_bar_back_normal_light"
               android:id="@+id/title_left_icon"
            />
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="@string/title_back"
              android:textSize="16sp"
              android:gravity="center"
              android:id="@+id/title_left_text"
              android:layout_toRightOf="@+id/title_left_icon"
            />
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:text="文件管理"
              android:textSize="16sp"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:id="@+id/title_title"
            />
    <ImageView android:layout_width="40dp"
               android:layout_height="match_parent"
               android:id="@+id/title_user_icon"
               android:src="@drawable/user"
               android:padding="7dp"

               android:layout_alignParentRight="true"
            />
    <ImageView android:layout_width="40dp"
               android:layout_height="match_parent"
               android:id="@+id/title_search_icon"
               android:src="@drawable/searchicon"
               android:padding="7dp"
               android:layout_toLeftOf="@id/title_user_icon"
            />


</RelativeLayout>